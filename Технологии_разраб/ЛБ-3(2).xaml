<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Margin="0,0,0,383">
            <MenuItem Header="Кисть">
                <MenuItem Header="Красный" Click="MenuItem_Click_1"/>
                <MenuItem Header="Синий" Click="MenuItem_Click_2"/>
                <MenuItem Header="Чёрный" Click="MenuItem_Click_3"/>
            </MenuItem>
            <MenuItem Header="Редактирование">
                <MenuItem Header="Увеличить" Click="MenuItem_Click_4"/>
                <MenuItem Header="Уменьшить" Click="MenuItem_Click_5"/>
            </MenuItem>
            <MenuItem Header="Очистить" Click="MenuItem_Click" Name="Clear"/>
        </Menu>
        <InkCanvas Margin="0,36,0,0" Name="Canvas">
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes Color="Black" Height="10" Width="1" x:Name="Kist"/>
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>
    </Grid>
</Window>
